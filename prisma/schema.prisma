generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  admin
  organizer
  attendee
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      ROLE?    @default(admin)
  profile   String?
  createdDt DateTime @default(now())
  updateAt  DateTime @updatedAt

  // Relations
  events Event[]
}

enum STATUS {
  Draft
  Published
  Cancelled
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  status      STATUS   @default(Draft)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations

  user   User @relation(fields: [userId], references: [id])
  userId Int
}
